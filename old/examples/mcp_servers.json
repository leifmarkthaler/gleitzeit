{
  "servers": [
    {
      "name": "openai",
      "command": "mcp-server-openai",
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      },
      "models": [
        "gpt-4",
        "gpt-4-turbo", 
        "gpt-4o",
        "gpt-3.5-turbo"
      ],
      "capabilities": [
        "text",
        "vision", 
        "function_calling",
        "streaming"
      ],
      "description": "OpenAI GPT models via MCP server"
    },
    {
      "name": "anthropic", 
      "command": "mcp-server-anthropic",
      "env": {
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
      },
      "models": [
        "claude-3-opus",
        "claude-3-sonnet", 
        "claude-3-haiku"
      ],
      "capabilities": [
        "text",
        "function_calling",
        "streaming"
      ],
      "description": "Anthropic Claude models via MCP server"
    },
    {
      "name": "ollama",
      "command": "mcp-server-ollama",
      "args": ["--host", "localhost:11434"],
      "models": [
        "llama3",
        "llava",
        "codellama",
        "mistral",
        "phi3"
      ],
      "capabilities": [
        "text",
        "vision"
      ],
      "description": "Local Ollama models via MCP server"
    },
    {
      "name": "filesystem",
      "command": "mcp-server-filesystem",
      "args": ["--read-write", "/tmp/gleitzeit"],
      "capabilities": [
        "file_operations",
        "directory_listing"
      ],
      "description": "File system operations via MCP"
    },
    {
      "name": "web-search",
      "command": "mcp-server-brave-search", 
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "capabilities": [
        "web_search",
        "real_time_information"
      ],
      "description": "Web search capabilities via MCP"
    }
  ]
}