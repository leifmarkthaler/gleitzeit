# Core files
include README.md
include LICENSE
include pyproject.toml
include requirements.txt
include install.sh

# Documentation
recursive-include docs *
include *.md

# Examples and workflows  
recursive-include examples *.py *.yaml *.yml *.json *.md

# Package code
recursive-include gleitzeit_cluster *.py *.yaml *.yml *.json

# Tests (include for development installations)
recursive-include tests *.py

# Exclude development/cache files
recursive-exclude * __pycache__ 
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * *.dylib
recursive-exclude * .DS_Store
recursive-exclude * .egg-info
recursive-exclude workflow_cache *
exclude .gitignore
exclude .env*